{ 
  "compilerOptions": { 
    "target": "es2022",   
    "module": "nodenext", 
    "outDir": "dist", 
    "rootDir": "src",
    "strict": true,  
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}